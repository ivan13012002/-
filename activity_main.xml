<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/StartSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Начальная сумма"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Срок вклада"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Procent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Процентр вклада"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Capitalization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Капитализация процентов"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/butCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Рассчитать" />

</LinearLayout>
